@model SW_Ecommerce.Models.Promocao

@{
    ViewBag.Title = "Promocao";
}

<h2>Promocao</h2>

<h3>Cadastrar Promoção</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Id Venda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-1">Descrição</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"> Id do Produto </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.produto.id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.produto.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"> Compre x </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.comprex, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comprex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"> Leve x </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.levex, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.levex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Promocao" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Lista de Promoções", "PromocaoLista")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

